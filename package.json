{
  "name": "ai-lab",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:static": "next build && next export",
    "start": "next start",
    "lint": "next lint",
    "eslint": "eslint --fix .",
    "eslint:dry": "eslint --fix-dry-run .",
    "format": "prettier --config .prettierrc --write \"./**/*.{js,ts,jsx,tsx,css}\"",
    "prettier:diff": "prettier --config .prettierrc --list-different \"./**/*.{js,ts,jsx,tsx,css}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "autoprefixer": "^10.4.7",
    "next": "12.1.5",
    "next-intl": "^2.6.0",
    "react": "18.0.0",
    "react-awesome-reveal": "^3.8.1",
    "react-dom": "18.0.0",
    "react-modal": "^3.15.1",
    "react-scroll": "^1.8.7",
    "react-slick": "^0.29.0",
    "slick-carousel": "^1.8.1",
    "tailwind-scrollbar": "^1.3.1",
    "tailwindcss": "^3.0.24",
    "zustand": "^4.0.0-rc.0"
  },
  "devDependencies": {
    "eslint": "8.13.0",
    "eslint-config-next": "12.1.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "postcss": "^8.4.12",
    "prettier": "2.6.2"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "prettier --write"
    ]
  }
}
